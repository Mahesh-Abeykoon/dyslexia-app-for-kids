        android:fontFamily="@font/dyslexia"
        android:text="COLOR"
        android:textColor="#FBF5F5"
        android:textSize="28sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.541"
